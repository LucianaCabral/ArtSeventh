<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <Toolbar
        android:id="@+id/details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="yes"
        android:navigationIcon="@drawable/ic_back"
        android:title="@string/search_about_movies"
        android:titleTextColor="@color/color_movie_title_backdrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleMarginStart="@dimen/dimen_16" />

    <ImageView
        android:id="@+id/img_details"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_16"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_toolbar"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_name_details"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_24"
        app:layout_constraintBottom_toBottomOf="@id/img_details"
        app:layout_constraintStart_toStartOf="@+id/img_details"
        tools:text="Spider man" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_overview_details"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        android:gravity="center_horizontal"
        android:text="@string/search_overview"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_details"
        app:layout_constraintStart_toStartOf="@+id/tv_name_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_details"
        tools:text="Lore Ipsum......" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_overview_details"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_name_details"
        app:layout_constraintTop_toBottomOf="@+id/label_overview_details"
        tools:text="Lore Ipsum......" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_original_language_details"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginEnd="@dimen/dimen_8"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/img_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_overview_details"
        tools:text="English" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_data_release_details"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginEnd="@dimen/dimen_8"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_name_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_original_language_details"
        tools:text="11-03-2023" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_vote_count_details"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginEnd="@dimen/dimen_8"
        android:text="@string/search_more_details"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_name_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_data_release_details"
        tools:text="More Details" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_vote_average_details"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginEnd="@dimen/dimen_8"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_name_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_vote_count_details"
        tools:text="5.1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_more_details"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        android:text="@string/search_more_details"
        android:textColor="@color/color_movie_title_backdrop"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_vote_average_details" />

</androidx.constraintlayout.widget.ConstraintLayout>